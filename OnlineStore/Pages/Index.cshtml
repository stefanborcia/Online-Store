@page
@using OnlineStore.Data
@model IndexModel
@inject OnlineStoreDbContext _dbContext;
@{
    ViewData["Title"] = "Home";
}

<div class="mt-5">
    <div class="carousel">
        <ul class="slides">
            <input type="radio" name="radio-buttons" id="img-1" checked />
            <li class="slide-container">
                <div class="slide-image">
                    <img src="/product-images/1.jpg">
                </div>
                <div class="carousel-controls">
                    <label for="img-3" class="prev-slide">
                        <span>&lsaquo;</span>
                    </label>
                    <label for="img-2" class="next-slide">
                        <span>&rsaquo;</span>
                    </label>
                </div>
            </li>
            <input type="radio" name="radio-buttons" id="img-2" />
            <li class="slide-container">
                <div class="slide-image">
                    <img src="/product-images/2.jpg">
                </div>
                <div class="carousel-controls">
                    <label for="img-1" class="prev-slide">
                        <span>&lsaquo;</span>
                    </label>
                    <label for="img-3" class="next-slide">
                        <span>&rsaquo;</span>
                    </label>
                </div>
            </li>
            <input type="radio" name="radio-buttons" id="img-3" />
            <li class="slide-container">
                <div class="slide-image">
                    <img src="/product-images/3.png">
                </div>
                <div class="carousel-controls">
                    <label for="img-2" class="prev-slide">
                        <span>&lsaquo;</span>
                    </label>
                    <label for="img-1" class="next-slide">
                        <span>&rsaquo;</span>
                    </label>
                </div>
            </li>
            <input type="radio" name="radio-buttons" id="img-4" />
            <li class="slide-container">
                <div class="slide-image">
                    <img src="/product-images/5.jpeg">
                </div>
                <div class="carousel-controls">
                    <label for="img-2" class="prev-slide">
                        <span>&lsaquo;</span>
                    </label>
                    <label for="img-1" class="next-slide">
                        <span>&rsaquo;</span>
                    </label>
                </div>
            </li>
            <div class="carousel-dots">
                <label for="img-1" class="carousel-dot" id="img-dot-1"></label>
                <label for="img-2" class="carousel-dot" id="img-dot-2"></label>
                <label for="img-3" class="carousel-dot" id="img-dot-3"></label>
                <label for="img-4" class="carousel-dot" id="img-dot-4"></label>
            </div>
        </ul>
    </div>
</div>

<h2 class="text-center mt-5 mb-5">Computers</h2>

<table class="table">
    <tr>
        @foreach(var product in _dbContext.Products.Take(5))
        {
        
            <td>
                <div class="product-details">
                    <div><strong>Name:</strong> @product.Name</div>
                    <div><strong>Brand:</strong> @product.Brand</div>
                    <div><strong>Price:</strong> @(product.Price)€</div>
                    <div><img src="/product-images/@product.ImageFileName" width="100" /></div>
                </div>
            </td>
        }
    </tr>
</table>

<h2 class="text-center mt-5 mb-5">Smartphones</h2>

<table class="table">
    <tr>
    @foreach (var product in _dbContext.Products.Where(p => p.Id >= 23 && p.Id <= 28).Take(5))
    {
        {
            <td>
                <div class="product-details">
                    <div><strong>Name:</strong> @product.Name</div>
                    <div><strong>Brand:</strong> @product.Brand</div>
                    <div><strong>Price:</strong> @(product.Price)€</div>
                    <div><img src="/product-images/@product.ImageFileName" width="100" /></div>
                </div>
            </td>
        }
    }
    </tr>
</table>

