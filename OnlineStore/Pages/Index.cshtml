@page
@using OnlineStore.Data
@model IndexModel
@inject OnlineStoreDbContext _dbContext;
@{
    ViewData["Title"] = "Home";
}

<div id="carouselExampleInterval" class="carousel slide h-50" data-bs-ride="carousel" >
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="10000">
            <img src="~/product-images/1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <img src="~/product-images/2.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/product-images/3.png" class="d-block w-100" alt="...">
        </div>        
        <div class="carousel-item">
            <img src="~/product-images/5.jpeg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<h2 class="text-center mt-5 mb-5">Computers</h2>

<table class="table">
    <tr>
        @foreach (var product in _dbContext.Products.Take(5))
        {

            <td>
                <div class="product-details">
                    <div><strong>Name:</strong> @product.Name</div>
                    <div><strong>Brand:</strong> @product.Brand</div>
                    <div><strong>Price:</strong> @(product.Price)€</div>
                    <div><img src="/product-images/@product.ImageFileName" width="100" /></div>
                </div>
            </td>
        }
    </tr>
</table>

<h2 class="text-center mt-5 mb-5">Smartphones</h2>

<table class="table">
    <tr>
        @foreach (var product in _dbContext.Products.Where(p => p.Id >= 23 && p.Id <= 28).Take(5))
        {
            {
                <td>
                    <div class="product-details">
                        <div><strong>Name:</strong> @product.Name</div>
                        <div><strong>Brand:</strong> @product.Brand</div>
                        <div><strong>Price:</strong> @(product.Price)€</div>
                        <div><img src="/product-images/@product.ImageFileName" width="100" /></div>
                    </div>
                </td>
            }
        }
    </tr>
</table>

